    <%= menu_group do %>
        <%= menu_item "Company", root_path %>
        <%= menu_item "Projects", projects_path %>
        <%= menu_item "Blog", blogs_path %>
        <%= menu_item "team", root_path %>
    <% end %>
    <%= menu_group :pull => :right do %>
